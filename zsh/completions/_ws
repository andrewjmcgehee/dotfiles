#compdef ws

typeset -A opt_args

_arguments -C \
  '1: :->ws' \
&& ret=0

case "$state" in
  (ws)
    local workspaces
    workspaces=($(find $HOME/Workspaces -d -not -path '*/\.*' -not -path "$HOME/Workspaces" -maxdepth 2 | sed "s#$HOME/Workspaces/##g"))
    _describe -t workspaces "workspace" workspaces && ret=0
  ;;
esac

return 1
